{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2022",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "logs",
        "scripts"
    ]
}